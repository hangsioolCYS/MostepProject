<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.ui.setting.SettingFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="settingfragment"
            type="com.example.sse_user.view.ui.setting.SettingFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/main_logo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/notosans_bold"
            android:text="설정"
            android:textColor="#0064c8"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottom_line_main_logo_v"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="15dp"
            android:background="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/main_logo_tv" />

        <View
            android:id="@+id/my_profile_go_v"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/bottom_line_main_logo_v" />

        <TextView
            android:id="@+id/my_profile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/notosans_medium"
            android:text="내 정보"
            android:textColor="#222222"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_line_my_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottom_line_main_logo_v" />

        <ImageView
            android:id="@+id/my_progile_iv"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/notice_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/my_profile_tv" />

        <View
            android:id="@+id/bottom_line_my_profile"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/my_profile_go_v" />

        <View
            android:id="@+id/bottom_view_my_profile"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#fafafa"
            app:layout_constraintTop_toBottomOf="@+id/bottom_line_my_profile" />

        <View
            android:id="@+id/about_version_go_v"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/bottom_view_my_profile" />

        <TextView
            android:id="@+id/about_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/notosans_medium"
            android:text="버전 정보"
            android:textColor="#222222"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_line_about_version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_view_my_profile" />

        <ImageView
            android:id="@+id/about_version_iv"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/notice_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/about_version_tv" />

        <View
            android:id="@+id/bottom_line_about_version"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/about_version_go_v" />


        <View
            android:id="@+id/change_pw_go_v"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/bottom_line_about_version" />

        <TextView
            android:id="@+id/change_pw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/notosans_medium"
            android:text="비밀번호 수정"
            android:textColor="#222222"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_line_change_pw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/change_pw_go_v" />

        <ImageView
            android:id="@+id/change_pw_iv"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/notice_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/change_pw_tv" />

        <View
            android:id="@+id/bottom_line_change_pw"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/change_pw_go_v" />

        <View
            android:id="@+id/logout_go_v"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/bottom_line_change_pw" />

        <TextView
            android:id="@+id/logout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/notosans_medium"
            android:text="로그아웃"
            android:textColor="#0064c8"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_line_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottom_line_change_pw" />

        <ImageView
            android:id="@+id/logout_iv"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/notice_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/logout_tv" />

        <View
            android:id="@+id/bottom_line_logout"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/logout_go_v" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#fafafa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_line_logout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
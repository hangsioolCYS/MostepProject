<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.ui.versionInfo.VersionInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/register_left"
            app:layout_constraintBottom_toBottomOf="@+id/main_logo_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_logo_tv" />

        <TextView
            android:id="@+id/main_logo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/notosans_bold"
            android:text="버전정보"
            android:textColor="#0064c8"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottom_line_main_logo_v"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="15dp"
            android:background="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/main_logo_tv" />

        <View
            android:id="@+id/center_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#f5f5f5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_line_main_logo_v" />

        <ImageView
            android:id="@+id/black_logo_iv"
            android:layout_width="190dp"
            android:layout_height="32.6dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/mostep_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_line_main_logo_v" />

        <TextView
            android:id="@+id/version_check_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/notosans_regular"
            android:text="최신버전을 사용 중입니다."
            android:textColor="#666666"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/black_logo_iv"
            app:layout_constraintStart_toStartOf="@+id/black_logo_iv"
            app:layout_constraintTop_toBottomOf="@+id/black_logo_iv" />

        <TextView
            android:id="@+id/version_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/lato_medium"
            android:text="ver 1.0"
            android:textColor="#aaaaaa"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/version_check_tv"
            app:layout_constraintStart_toStartOf="@+id/version_check_tv"
            app:layout_constraintTop_toBottomOf="@+id/version_check_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>